<%- include('./partials/head',{
    title : 'Registro'
  }) %> 

<body class="register">
    <%- include('./partials/header') %> 

    <main class="register__main">
        <section class="register__main_section">
            <h1>Registrate</h1>

            <form action="" method="" class="form">
                <div class="form__box">
                    <label class="form__label" for="nombre">Nombre</label>
                    <input class="form__input" type="text" id="nombre"  name="nombre" required>
                    <span class="form__div_span">Este campo es obligatorio*</span>
                </div>
                <div class="form__box">
                    <label class="form__label" for="apellido">Apellido</label>
                    <input class="form__input" type="text" id="apellido"  name="apellido" >
                </div>
                <div class="form__box">
                    <label class="form__label" for="email">Correo Electrónico</label>
                    <input class="form__input" type="email" id="email"  name="email" required>
                    <span class="form__div_span">Este campo es obligatorio*</span>
                </div>
                <div class="form__box">
                    <label class="form__label" for="password">Contraseña</label>
                    <input class="form__input" type="password" id="password" name="password" required>
                    <span class="form__div_span">Este campo es obligatorio*</span>
                </div>
                <div class="form__box">
                    <label class="form__label" for="password2">Confirmar Contraseña</label>
                    <input class="form__input" type="password" id="password2" required>
                    <span class="form__div_span">Este campo es obligatorio*</span>
                </div>
                <div class="form__input_checkbox">
                    <input type="checkbox">
                    <label >
                         Acepto los terminos y condiciones
                    </label>
                </div>
                <div class="form__input_checkbox">
                    <input type="checkbox">
                    <label >
                         Acepto el uso de cookies
                    </label>
                </div>
                <div class="form__box_buttom">
                    <a class="form__button_cancel" href="">Cancelar</a>
                    <button class="form__button_submit" type="submit">REGISTRARME</button>
                </div>
            </form>
        </section>
    </main>
    <%- include('./partials/footer') %> 

</body>
</html>